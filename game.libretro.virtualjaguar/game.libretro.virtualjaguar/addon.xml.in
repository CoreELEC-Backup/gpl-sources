<?xml version="1.0" encoding="UTF-8"?>
<addon id="game.libretro.virtualjaguar"
		name="Atari - Jaguar (Virtual Jaguar)"
		version="2.1.0.11"
		provider-name="David Raingeard, Shamus">
	<requires>
		<import addon="game.libretro" version="1.0.0"/>
		<import addon="game.controller.default" version="1.0.0"/>
	</requires>
	<extension point="kodi.gameclient"
			library_@PLATFORM@="@LIBRARY_FILENAME@">
		<platforms>Jaguar</platforms>
		<extensions>j64|jag</extensions>
		<supports_vfs>true</supports_vfs>
		<supports_standalone>false</supports_standalone>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary lang="en_GB">Atari - Jaguar (Virtual Jaguar) v2.1.0</summary>
		<description lang="en_GB">Virtual Jaguar is an emulator for the Atari Jaguar video game console.

Based on code released by David Raingeard (Cal2) of what used to be Potato Emulation.

Supported files: .j64, .jag</description>
		<license>GPLv3</license>
		<platform>@PLATFORM@</platform>
		<source>https://github.com/kodi-game/game.libretro.virtualjaguar</source>
		<assets>
			<icon>resources/icon.png</icon>
			<screenshot>resources/screenshot-01.jpg</screenshot>
			<screenshot>resources/screenshot-02.jpg</screenshot>
			<screenshot>resources/screenshot-03.jpg</screenshot>
		</assets>
	</extension>
</addon>
