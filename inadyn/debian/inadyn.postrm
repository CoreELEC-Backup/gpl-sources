#!/bin/sh

set -e

NAME=inadyn
RUNDIR=/run/$NAME
CACHEDIR=/var/cache/$NAME
CONF=/etc/$NAME.conf

if [ "$1" = "purge" ]; then
	if [ -d $RUNDIR ]; then
	    rm -rf $RUNDIR
	fi
	rm -rf $CACHEDIR

	for i in $CONF $CACHEDIR; do
	    dpkg-statoverride --remove $i 2>/dev/null || true
	done
fi

#DEBHELPER#

exit 0
