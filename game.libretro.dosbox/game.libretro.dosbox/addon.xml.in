<?xml version="1.0" encoding="UTF-8"?>
<addon id="game.libretro.dosbox"
		name="DOS (DOSBox)"
		version="0.74.0.7"
		provider-name="DOSBox Team">
	<requires>
		<import addon="game.libretro" version="1.0.0"/>
	</requires>
	<extension point="kodi.gameclient"
			library_@PLATFORM@="@LIBRARY_FILENAME@">
		<platforms></platforms>
		<extensions>exe|com|bat|conf</extensions>
		<supports_vfs>false</supports_vfs>
		<supports_standalone>true</supports_standalone>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary lang="en_GB">DOS (DOSBox) 0.74</summary>
		<description lang="en_GB">DOSBox emulates an IBM PC compatible computer running MS-DOS. DOSBox can be configured to run a wide range of DOS games, from CGA/Tandy/PCjr classics up to games from the Quake era.

. If loading exe/com/bat the system directory will be searched for a &#39;dosbox.conf&#39; file to load. If loading a *.conf file DOSBox will be loaded with the options in the config file.

Supported files: .exe, .com, .bat, .conf</description>
		<license>GPLv2</license>
		<platform>@PLATFORM@</platform>
		<source>https://github.com/kodi-game/game.libretro.dosbox</source>
		<assets>
			<icon>resources/icon.png</icon>
		</assets>
	</extension>
</addon>
