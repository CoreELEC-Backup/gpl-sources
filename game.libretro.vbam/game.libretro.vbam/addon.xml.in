<?xml version="1.0" encoding="UTF-8"?>
<addon id="game.libretro.vbam"
		name="Nintendo - Game Boy Advance (VBA-M)"
		version="2.1.3.11"
		provider-name="Forgotten, VBA-M Team">
	<requires>
		<import addon="game.libretro" version="1.0.0"/>
		<import addon="game.controller.gba" version="1.0.0"/>
	</requires>
	<extension point="kodi.gameclient"
			library_@PLATFORM@="@LIBRARY_FILENAME@">
		<platforms>GBA</platforms>
		<extensions>dmg|gb|gbc|cgb|sgb|gba</extensions>
		<supports_vfs>true</supports_vfs>
		<supports_standalone>false</supports_standalone>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary lang="en_GB">Nintendo - Game Boy Advance (VBA-M) 2.1.3 26e9a6e</summary>
		<description lang="en_GB">VBA-M is a Nintendo Game Boy and Game Boy Advance emulator based on the official VisualBoyAdvance by Forgotten and the VBA development team.

Supported files: .dmg, .gb, .gbc, .cgb, .sgb, .gba</description>
		<license>GPLv2</license>
		<platform>@PLATFORM@</platform>
		<source>https://github.com/kodi-game/game.libretro.vbam</source>
		<assets>
			<icon>resources/icon.png</icon>
			<screenshot>resources/screenshot-01.jpg</screenshot>
			<screenshot>resources/screenshot-02.jpg</screenshot>
			<screenshot>resources/screenshot-03.jpg</screenshot>
		</assets>
	</extension>
</addon>
