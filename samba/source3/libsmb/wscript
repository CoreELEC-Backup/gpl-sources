#!/usr/bin/env python

def build(bld):
    bld.SAMBA3_LIBRARY('smbclient',
                       source='''
                              libsmb_cache.c
                              libsmb_compat.c
                              libsmb_context.c
                              libsmb_dir.c
                              libsmb_file.c
                              libsmb_misc.c
                              libsmb_path.c
                              libsmb_printjob.c
                              libsmb_server.c
                              libsmb_stat.c
                              libsmb_xattr.c
                              libsmb_setget.c''',
                       public_deps='''
                                   pthread
                                   talloc
                                   smbconf
                                   libsmb
                                   KRBCLIENT
                                   msrpc3
                                   libcli_lsa3''',
                       public_headers='../include/libsmbclient.h',
                       abi_directory='ABI',
                       abi_match='smbc_*',
                       vnum='0.6.0',
                       pc_files='smbclient.pc')
