<?xml version="1.0" encoding="UTF-8"?>
<addon id="game.libretro.quicknes"
		name="Nintendo - NES / Famicom (QuickNES)"
		version="1.0.0.14"
		provider-name="blargg, kode54">
	<requires>
		<import addon="game.libretro" version="1.0.0"/>
		<import addon="game.controller.nes" version="1.0.0"/>
	</requires>
	<extension point="kodi.gameclient"
			library_@PLATFORM@="@LIBRARY_FILENAME@">
		<platforms>NES</platforms>
		<extensions>nes</extensions>
		<supports_vfs>true</supports_vfs>
		<supports_standalone>false</supports_standalone>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary lang="en_GB">Nintendo - NES / Famicom (QuickNES) 1.0-WIP</summary>
		<description lang="en_GB">The QuickNES core library, originally by Shay Green, heavily modified. QuickNES is a newer emulator that seems to have good compatibility.

Supported files: .nes</description>
		<license>LGPLv2.1+</license>
		<platform>@PLATFORM@</platform>
		<source>https://github.com/kodi-game/game.libretro.quicknes</source>
		<assets>
			<icon>resources/icon.png</icon>
			<screenshot>resources/screenshot-01.jpg</screenshot>
			<screenshot>resources/screenshot-02.jpg</screenshot>
			<screenshot>resources/screenshot-03.jpg</screenshot>
		</assets>
	</extension>
</addon>
