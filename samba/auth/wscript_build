#!/usr/bin/env python

bld.SAMBA_LIBRARY('common_auth',
                  source='''auth_sam_reply.c
                            wbc_auth_util.c
                            auth_log.c
                            auth_util.c''',
                  deps='''talloc
                          samba-security
                          samba-util
                          util_str_escape
                          LIBTSOCKET
                          audit_logging
                          jansson
                          MESSAGING_SEND
                          server_id_db
                          ndr-samba''',
                  private_library=True)

bld.RECURSE('gensec')
bld.RECURSE('ntlmssp')
bld.RECURSE('credentials')
