<?xml version="1.0" encoding="UTF-8"?>
<addon id="game.libretro.beetle-supergrafx"
		name="NEC - PC Engine SuperGrafx (Beetle SuperGrafx)"
		version="1.23.0.12"
		provider-name="Mednafen Team">
	<requires>
		<import addon="game.libretro" version="1.0.0"/>
		<import addon="game.controller.pce" version="1.0.0"/>
	</requires>
	<extension point="kodi.gameclient"
			library_@PLATFORM@="@LIBRARY_FILENAME@">
		<platforms>SGX</platforms>
		<extensions>pce|sgx|cue|ccd|chd</extensions>
		<supports_vfs>false</supports_vfs>
		<supports_standalone>false</supports_standalone>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary lang="en_GB">NEC - PC Engine SuperGrafx (Beetle SuperGrafx) v1.23.0</summary>
		<description lang="en_GB">Source: https://github.com/libretro/beetle-supergrafx-libretro

Supported files: .pce, .sgx, .cue, .ccd, .chd</description>
		<license>GPLv2</license>
		<platform>@PLATFORM@</platform>
		<source>https://github.com/kodi-game/game.libretro.beetle-supergrafx</source>
		<assets>
			<icon>resources/icon.png</icon>
			<screenshot>resources/screenshot-01.jpg</screenshot>
			<screenshot>resources/screenshot-02.jpg</screenshot>
			<screenshot>resources/screenshot-03.jpg</screenshot>
		</assets>
	</extension>
</addon>
