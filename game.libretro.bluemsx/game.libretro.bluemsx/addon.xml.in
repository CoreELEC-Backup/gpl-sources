<?xml version="1.0" encoding="UTF-8"?>
<addon id="game.libretro.bluemsx"
		name="MSX/SVI/ColecoVision/SG-1000 (blueMSX)"
		version="0.0.1.14"
		provider-name="Daniel Vik">
	<requires>
		<import addon="game.libretro" version="1.0.0"/>
		<import addon="game.controller.msx.keyboard" version="1.0.0"/>
		<import addon="game.controller.msx.joystick" version="1.0.0"/>
	</requires>
	<extension point="kodi.gameclient"
			library_@PLATFORM@="@LIBRARY_FILENAME@">
		<platforms>msx</platforms>
		<extensions>rom|ri|mx1|mx2|dsk|col|sg|sc|cas|m3u</extensions>
		<supports_vfs>false</supports_vfs>
		<supports_standalone>false</supports_standalone>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary lang="en_GB">MSX/SVI/ColecoVision/SG-1000 (blueMSX) git</summary>
		<description lang="en_GB">BlueMSX is a rich MSX emulator. It supports most common machines and a wide variety of extension hardware.

Supported extensions: .rom, .ri, .mx1, .mx2, .col, .sg, .sc

Authors: Daniel Vik, Benoit Delvaux, Tomas Karlsson, Johan van Leur, Ricardo Bittencourt and Ray Zero

Supported files: .rom, .ri, .mx1, .mx2, .dsk, .col, .sg, .sc, .cas, .m3u</description>
		<license>GPLv2</license>
		<platform>@PLATFORM@</platform>
		<source>https://github.com/kodi-game/game.libretro.bluemsx</source>
		<assets>
			<icon>resources/icon.png</icon>
		</assets>
	</extension>
</addon>
