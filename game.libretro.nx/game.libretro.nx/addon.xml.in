<?xml version="1.0" encoding="UTF-8"?>
<addon id="game.libretro.nx"
		name="Cave Story (NXEngine)"
		version="1.0.0.12"
		provider-name="Caitlin Shaw">
	<requires>
		<import addon="game.libretro" version="1.0.0"/>
		<import addon="game.controller.default" version="1.0.0"/>
	</requires>
	<extension point="kodi.gameclient"
			library_@PLATFORM@="@LIBRARY_FILENAME@">
		<platforms></platforms>
		<extensions>exe</extensions>
		<supports_vfs>false</supports_vfs>
		<supports_standalone>false</supports_standalone>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary lang="en_GB">Cave Story (NXEngine) 1.0.0.6</summary>
		<description lang="en_GB">NXEngine is a complete open-source clone/rewrite of the masterpiece jump-and-run platformer Doukutsu Monogatari (also known as Cave Story).

Supported files: .exe</description>
		<license>GPLv3</license>
		<platform>@PLATFORM@</platform>
		<source>https://github.com/kodi-game/game.libretro.nx</source>
		<assets>
			<icon>resources/icon.png</icon>
		</assets>
	</extension>
</addon>
