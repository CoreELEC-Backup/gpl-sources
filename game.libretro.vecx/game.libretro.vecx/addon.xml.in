<?xml version="1.0" encoding="UTF-8"?>
<addon id="game.libretro.vecx"
		name="GCE - Vectrex (vecx)"
		version="1.2.0.12"
		provider-name="Valavan Manohararajah, John Hawthorn, Nikita Zimin, Demeth">
	<requires>
		<import addon="game.libretro" version="1.0.0"/>
		<import addon="game.controller.vectrex" version="1.0.0"/>
	</requires>
	<extension point="kodi.gameclient"
			library_@PLATFORM@="@LIBRARY_FILENAME@">
		<platforms>vecx</platforms>
		<extensions>bin|vec</extensions>
		<supports_vfs>true</supports_vfs>
		<supports_standalone>false</supports_standalone>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary lang="en_GB">GCE - Vectrex (vecx) 1.2</summary>
		<description lang="en_GB">Vecx is a Vectrex video game system emulator. It can run most Vectrex software.

Written by Richard Bannister.

Supported files: .bin, .vec</description>
		<license>GPLv3</license>
		<platform>@PLATFORM@</platform>
		<source>https://github.com/kodi-game/game.libretro.vecx</source>
	</extension>
</addon>
